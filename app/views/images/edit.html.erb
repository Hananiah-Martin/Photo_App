<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      
      <%# Card Container %>
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white py-3">
          <h2 class="h4 mb-0 text-center fw-bold">
            <i class="bi bi-pencil-square me-2"></i>Edit Image Details
          </h2>
        </div>
        
        <div class="card-body p-4">
          <%# This renders your _form.html.erb partial %>
          <%= render "form", image: @image %>
        </div>

        <div class="card-footer bg-light py-3">
          <div class="d-flex justify-content-between align-items-center">
            <%= link_to images_path, class: "btn btn-link text-secondary text-decoration-none" do %>
              <i class="bi bi-arrow-left"></i> Back to Gallery
            <% end %>
            
            <%= link_to @image, class: "btn btn-outline-info btn-sm" do %>
              <i class="bi bi-eye"></i> View Current
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>