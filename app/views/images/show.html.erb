<div class="container mt-5">
  <%# 1. Styled Notification %>
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
      <i class="bi bi-check-circle-fill me-2"></i> <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%# 2. Main Image Card %>
      <div class="card shadow border-0 rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3">
          <h2 class="h4 mb-0 fw-bold text-center">Image Details</h2>
        </div>
        
        <div class="card-body p-0 text-center bg-light">
          <%# Render your image here - assuming it contains the <img> tag %>
          <div class="p-4">
            <%= render @image %>
          </div>
        </div>

        <%# 3. Action Footer %>
        <div class="card-footer bg-white py-3">
          <div class="d-flex flex-wrap justify-content-center gap-2">
            <%= link_to images_path, class: "btn btn-outline-secondary px-4" do %>
              <i class="bi bi-arrow-left"></i> Back to Gallery
            <% end %>

            <%= link_to edit_image_path(@image), class: "btn btn-primary px-4" do %>
              <i class="bi bi-pencil"></i> Edit Details
            <% end %>

            <%# Delete is a separate form; we style the button to match %>
            <%= button_to @image, 
                          method: :delete, 
                          data: { turbo_confirm: "Are you sure you want to delete this image?" }, 
                          class: "btn btn-danger px-4" do %>
              <i class="bi bi-trash"></i> Destroy
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>