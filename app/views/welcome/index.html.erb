<% if current_user %>
  <div class="p-5 mb-4 bg-light border rounded-3 text-center">
    <div class="container-fluid py-5">
      <h1 class="display-5 fw-bold">Welcome, <%= current_user.email %></h1>
      <p class="fs-4 text-muted">Manage your photos efficiently from your dashboard.</p>
    </div>
  </div>
<% else %>
  <%# Hero Section %>
  <div class="p-5 mb-4 bg-primary text-white rounded-3 text-center shadow">
    <div class="container-fluid py-5">
      <h1 class="display-4 fw-bold">Welcome to the Photo Management App!</h1>
      <p class="fs-4">The easiest way to organize, store, and share your professional photos.</p>
      <%= link_to 'Get Started Now', new_user_registration_path, class: 'btn btn-light btn-lg px-4 mt-3' %>
    </div>
  </div>

  <%# Pricing Plans %>
  <div class="row row-cols-1 row-cols-md-2 mb-3 text-center justify-content-center">
    <div class="col-md-5 col-lg-4">
      <div class="card mb-4 rounded-3 shadow-sm">
        <div class="card-header py-3">
          <h4 class="my-0 fw-normal">Premium Plan</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$10<small class="text-muted fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4 text-start">
            <li>✅ Unlimited Image Uploads</li>
            <li>✅ Responsive design</li>
            <li>✅ Access anywhere</li>
          </ul>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'w-100 btn btn-lg btn-outline-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-5 col-lg-4">
      <div class="card mb-4 rounded-3 shadow-sm border-primary">
        <div class="card-header py-3 text-white bg-primary border-primary">
          <h4 class="my-0 fw-normal">Amaze Plan</h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">$20<small class="text-muted fw-light">/mo</small></h1>
          <ul class="list-unstyled mt-3 mb-4 text-start">
            <li>✅ Unlimited Image Uploads</li>
            <li>✅ Responsive design</li>
            <li>✅ Access anywhere</li>
            <li class="fw-bold text-primary">✅ Unlimited projects</li>
          </ul>
          <%= link_to 'Sign Up', new_user_registration_path, class: 'w-100 btn btn-lg btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>